{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "task API Documentation",
    "description": "task API Documentation"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT authorization of an API. Example: 'Bearer {token}'"
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ],
  "tags": [
    {
      "name": "Authentication"
    },
    {
      "name": "Tasks"
    },
    {
      "name": "Categories"
    },
    {
      "name": "Tags"
    },
    {
      "name": "Users"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User register",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "User name",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User register"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "User email and password",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "default": "john.doe@example.com"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User login"
          }
        }
      }
    },
    "/api/users/": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user information",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Get user information"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },


    "/api/tasks/": {
      "post": {
        "tags": ["Tasks"],
        "summary": "Create task",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "description": "Task data",
            "schema": {
              "type": "object",
              "required": [
                "title",
                "priority",
                "expirationDate",
                "categoryName"
              ],
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Task title"
                },
                "description": {
                  "type": "string",
                  "description": "Task description"
                },
                "priority": {
                  "type": "string",
                  "enum": ["low", "medium", "high"],
                  "description": "Task priority"
                },
                "expirationDate": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Task expiration date"
                },
                "categoryName": {
                  "type": "string",
                  "description": "Category name for the task"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task created"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "tags": ["Tasks"],
        "summary": "Get all tasks by user",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "completada",
            "in": "query",
            "description": "Filtrar por estado de completado (completed, pending, expired, in_progress, canceled)",
            "required": false,
            "type": "string"
          },
          {
            "name": "categoria",
            "in": "query",
            "description": "Filtrar por ID de categoría",
            "required": false,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "prioridad",
            "in": "query",
            "description": "Filtrar por nivel de prioridad (low, medium, high)",
            "required": false,
            "type": "string"
          },
          {
            "name": "fecha_inicio",
            "in": "query",
            "description": "Fecha de inicio del rango de vencimiento (YYYY-MM-DD)",
            "required": false,
            "type": "string",
            "format": "date"
          },
          {
            "name": "fecha_fin",
            "in": "query",
            "description": "Fecha de fin del rango de vencimiento (YYYY-MM-DD)",
            "required": false,
            "type": "string",
            "format": "date"
          },
          {
            "name": "busqueda",
            "in": "query",
            "description": "Buscar en título y descripción",
            "required": false,
            "type": "string"
          },
          {
            "name": "etiquetas",
            "in": "query",
            "description": "Filtrar por nombres de etiquetas (separadas por comas)",
            "required": false,
            "type": "string"
          },
          {
            "name": "ordenar",
            "in": "query",
            "description": "Campo por el cual ordenar (creado_en, fecha_vencimiento, prioridad, titulo)",
            "required": false,
            "type": "string"
          },
          {
            "name": "direccion",
            "in": "query",
            "description": "Dirección de ordenamiento (asc o desc)",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Get all tasks by user"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },

    "/api/tasks/{id}": {
      "put": {
        "tags": ["Tasks"],
        "summary": "Update task",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Task id to update",
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "Task data",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task updated"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },

      "delete": {
        "tags": ["Tasks"],
        "summary": "Delete task",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Task id to delete",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Task deleted"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "patch": {
        "tags": ["Tasks"],
        "summary": "Mark task as completed",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Task id to mark as completed",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Task marked as completed"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },

  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "John Doe"
        },
        "email": {
          "type": "string",
          "default": "john.doe@example.com"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["name", "email", "password", "rolId"]
    },
    "Task": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "default": "Task title"
        },
        "description": {
          "type": "string",
          "default": "Task description"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time"
        },
        "categoryName": {
          "type": "string",
          "default": "General"
        },
        "tags": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tag"
          }
        }
      },
      "required": ["title", "description", "dueDate", "categoryId"]
    },
    "Tag": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "Tag name"
        }
      },
      "required": ["name"]
    }
  }
}
